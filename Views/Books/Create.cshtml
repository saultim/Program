@model Book

@{
    ViewData["Title"] = "Добавить учебник";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"><a asp-controller="Books" asp-action="Index">Все учебники</a></li>
        <li class="breadcrumb-item active">Добавить учебник</li>
    </ol>
</nav>

<h1>Добавить учебник для обмена</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <form method="post" id="bookForm">
            <div class="form-group mb-3">
                <label class="form-label">Название учебника *</label>
                <input type="text" asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Автор *</label>
                <input type="text" asp-for="Author" class="form-control" required />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Предмет</label>
                <input type="text" asp-for="Subject" class="form-control" placeholder="Математика, Физика, Программирование..." />
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Курс</label>
                <input type="text" asp-for="Course" class="form-control" placeholder="1, 2, 3..." />
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Состояние</label>
                <select asp-for="Condition" class="form-control">
                    <option value="">Выберите состояние...</option>
                    <option value="Новое">Новое</option>
                    <option value="Отличное">Отличное</option>
                    <option value="Хорошее">Хорошее</option>
                    <option value="Удовлетворительное">Удовлетворительное</option>
                    <option value="Плохое">Плохое</option>
                </select>
            </div>

            <div class="alert alert-info">
                <strong>ℹ️ Все учебники добавляются только для обмена</strong>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">✅ Добавить учебник для обмена</button>
                <a asp-controller="Books" asp-action="Index" class="btn btn-secondary">← Назад к списку</a>
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById('bookForm').addEventListener('submit', function(e) {
        const title = document.querySelector('input[asp-for="Title"]').value.trim();
        const author = document.querySelector('input[asp-for="Author"]').value.trim();

        if (!title || !author) {
            e.preventDefault();
            alert('Заполните обязательные поля: Название и Автор');
            return false;
        }

        console.log('Форма отправляется...');
        return true;
    });
</script>