@model List<Exchange>

@{
    ViewData["Title"] = "Завершенные обмены";
    var reviewedExchangeIds = ViewBag.ReviewedExchangeIds as List<int> ?? new List<int>();
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item"><a asp-controller="Exchange" asp-action="MyExchanges">Мои обмены</a></li>
        <li class="breadcrumb-item active">Завершенные обмены</li>
    </ol>
</nav>

<h1>Завершенные обмены</h1>

@if (!Model.Any())
{
    <div class="alert alert-info">
        У вас пока нет завершенных обменов.
    </div>
}
else
{
    <div class="row">
        @foreach (var exchange in Model)
        {
            var otherUser = User.Identity.Name == exchange.Initiator.UserName ? exchange.TargetUser : exchange.Initiator;
            var hasReviewed = reviewedExchangeIds.Contains(exchange.Id);

            <div class="col-md-6 mb-4">
                <div class="card border-success">
                    <div class="card-header bg-success text-white">
                        <strong>✅ Завершен</strong>
                        <span class="float-end">@exchange.UpdatedAt?.ToString("dd.MM.yyyy")</span>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6>Вы получили:</h6>
                                        <strong>@(User.Identity.Name == exchange.Initiator.UserName ? exchange.RequestedBook.Title : exchange.OfferedBook.Title)</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6>Вы отдали:</h6>
                                        <strong>@(User.Identity.Name == exchange.Initiator.UserName ? exchange.OfferedBook.Title : exchange.RequestedBook.Title)</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-3">
                            <p class="mb-1"><strong>Участник обмена:</strong> @otherUser.FullName</p>

                            @if (!hasReviewed)
                            {
                                <div class="d-grid gap-2">
                                    <a asp-controller="Feedback" asp-action="LeaveReview"
                                       asp-route-targetUserId="@otherUser.Id"
                                       asp-route-exchangeId="@exchange.Id"
                                       class="btn btn-outline-success btn-sm">⭐ Оставить отзыв</a>
                                </div>
                            }
                            else
                            {
                                <span class="badge bg-success">✅ Отзыв оставлен</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}