@model LeaveReviewViewModel

@{
    ViewData["Title"] = "Оставить отзыв";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Главная</a></li>
        <li class="breadcrumb-item active">Оставить отзыв</li>
    </ol>
</nav>

<h1>Оставить отзыв пользователю @Model.TargetUserName</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <input type="hidden" asp-for="TargetUserId" />
            <input type="hidden" asp-for="TargetUserName" />
            <input type="hidden" asp-for="ExchangeId" />

            <div class="card">
                <div class="card-body">
                    <div class="form-group mb-4">
                        <label class="form-label">Оценка *</label>
                        <div class="rating-stars">
                            @for (int i = 5; i >= 1; i--)
                            {
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="Rating" value="@i" id="rating@i">
                                    <label class="form-check-label star-label" for="rating@i">
                                        @for (int j = 0; j < i; j++)
                                        {
                                            <span class="star">⭐</span>
                                        }
                                        (@i)
                                    </label>
                                </div>
                            }
                        </div>
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Comment" class="form-label">Текст отзыва *</label>
                        <textarea asp-for="Comment" class="form-control" rows="5"
                                  placeholder="Опишите ваши впечатления от обмена..."></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                        <small class="text-muted">Осталось символов: <span id="charCount">1000</span></small>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-success">📝 Оставить отзыв</button>
                        <a href="javascript:history.back()" class="btn btn-secondary">← Назад</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Счетчик символов
        document.getElementById('Comment').addEventListener('input', function() {
            const maxLength = 1000;
            const currentLength = this.value.length;
            const remaining = maxLength - currentLength;
            document.getElementById('charCount').textContent = remaining;

            if (remaining < 0) {
                document.getElementById('charCount').classList.add('text-danger');
            } else {
                document.getElementById('charCount').classList.remove('text-danger');
            }
        });
    </script>
}